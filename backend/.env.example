# Pastebin API Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================

# Neon Postgres connection string
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# ============================================
# Server Configuration
# ============================================

# Port to run the server (default: 3001)
PORT=3001

# Node environment (development, production, test)
NODE_ENV=development

# Base URL for generating paste URLs
BASE_URL=http://localhost:3001

# ============================================
# Security Configuration
# ============================================

# Secret for authenticating cron job requests
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CRON_SECRET=your_random_secret_here_min_32_chars

# CORS origin (use * for development, specific domain for production)
CORS_ORIGIN=*

# ============================================
# Rate Limiting (optional overrides)
# ============================================

# Global rate limit (requests per 15 minutes)
# RATE_LIMIT_GLOBAL_MAX=1000

# Paste creation rate limit (pastes per minute)
# RATE_LIMIT_CREATE_MAX=10

# Paste retrieval rate limit (requests per minute)
# RATE_LIMIT_READ_MAX=100

# ============================================
# Cleanup Configuration
# ============================================

# Days to retain expired pastes before purging (default: 7)
CLEANUP_RETENTION_DAYS=7
