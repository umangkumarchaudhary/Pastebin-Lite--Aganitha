generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paste {
  id        String    @id @default(cuid())
  content   String    @db.Text
  language  String?
  expiresAt DateTime?
  maxViews  Int?
  viewCount Int       @default(0)
  isExpired Boolean   @default(false)
  createdAt DateTime  @default(now())

  @@index([expiresAt])
  @@index([isExpired])
  @@index([createdAt])
}
